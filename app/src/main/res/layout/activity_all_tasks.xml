<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllTasksActivity">

    <!-- Title and Add Button Container -->
    <TextView
        android:id="@+id/allTasks_task_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tasks"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/allTasks_add_btn_id"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:foreground="@drawable/add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <!-- Tab Buttons -->
    <LinearLayout
        android:id="@+id/allTasks_topLinearLayout_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/allTasks_task_tv_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/allTasks_yourTasks_btn_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:text="@string/tab_yourTasks_text"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="8dp"/>

        <Button
            android:id="@+id/allTasks_openTasks_btn_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:text="@string/tab_allTasks_text"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:padding="8dp"/>

        <Button
            android:id="@+id/allTasks_allTasks_btn_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:text="@string/tab_allTasks_text"
            android:background="@color/activeTabBackground"
            android:padding="12dp"/>

    </LinearLayout>

    <!-- Scrollable Table Layout -->
